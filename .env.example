# ==============================================
# TekBot Platform Environment Configuration
# ==============================================

# Application Environment
NODE_ENV=development
PORT=3000
API_VERSION=v1
API_PREFIX=/api
TEST_PORT=3001
BASE_URL=http://localhost:3000

# Database Configuration
DATABASE_URL="postgresql://username:password@localhost:5432/tekbot_dev?schema=public"
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=tekbot_dev
DATABASE_USERNAME=username
DATABASE_PASSWORD=password

# ---
# Local Postgres (Docker) Fallback
# If cloud DB (e.g., Supabase) is unreachable during development, you can run
# a local Postgres via docker-compose and point DATABASE_URL to it:
#
# 1) Start services: `docker compose up -d postgres redis`
# 2) Use this URL:
# DATABASE_URL="postgresql://tekbot_user:tekbot_password@localhost:5432/tekbot_dev?schema=public"
#
# The compose file seeds initial DB and exposes `5432` locally.

# Redis Configuration
REDIS_URL="redis://localhost:6379"
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-this-in-production
JWT_REFRESH_EXPIRES_IN=30d

# OpenAI Configuration
OPENAI_API_KEY=sk-your-openai-api-key
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=1000
OPENAI_TEMPERATURE=0.7

# Stripe Configuration (US Payments)
STRIPE_PUBLIC_KEY=pk_test_your-stripe-public-key
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=whsec_your-stripe-webhook-secret

# Paystack Configuration (Nigeria Payments)
PAYSTACK_PUBLIC_KEY=pk_test_your-paystack-public-key
PAYSTACK_SECRET_KEY=sk_test_your-paystack-secret-key

# Twilio Configuration (WhatsApp)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_WHATSAPP_NUMBER=+14155238886

# 360Dialog Configuration (WhatsApp Business)
THREESIXTY_DIALOG_API_KEY=your-360dialog-api-key
THREESIXTY_DIALOG_WEBHOOK_SECRET=your-360dialog-webhook-secret

# Meta API Configuration (Instagram)
META_APP_ID=your-meta-app-id
META_APP_SECRET=your-meta-app-secret
META_ACCESS_TOKEN=your-meta-access-token
META_WEBHOOK_VERIFY_TOKEN=your-meta-webhook-verify-token

# Email Configuration (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-email-password
SMTP_FROM=noreply@tekbot.com

# Slack Configuration (Notifications)
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/your/slack/webhook
SLACK_BOT_TOKEN=xoxb-your-slack-bot-token

# Calendly Configuration
CALENDLY_API_KEY=your-calendly-api-key
CALENDLY_WEBHOOK_SECRET=your-calendly-webhook-secret

# Widget CDN / Embed
WIDGET_CDN_URL=https://cdn.tekbot.com/widget.js

# File Upload Configuration
FILE_UPLOAD_MAX_SIZE=10485760  # 10MB
FILE_UPLOAD_ALLOWED_TYPES=image/jpeg,image/png,image/gif,application/pdf

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
RATE_LIMIT_MAX_REQUESTS=100

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:3001
CORS_CREDENTIALS=true

# Logging Configuration
LOG_LEVEL=debug
LOG_FORMAT=combined

# Monitoring & Analytics
SENTRY_DSN=your-sentry-dsn
GOOGLE_ANALYTICS_ID=GA-your-analytics-id

# Feature Flags
ENABLE_SWAGGER=true
ENABLE_RATE_LIMITING=true
ENABLE_CORS=true
ENABLE_HELMET=true

# Multi-tenant Configuration
DEFAULT_TENANT_ID=tekassist
MAX_TENANTS_PER_INSTANCE=100

# Queue Configuration
QUEUE_REDIS_URL="redis://localhost:6379"
QUEUE_CONCURRENCY=5
QUEUE_MAX_ATTEMPTS=3

# Webhook Configuration
WEBHOOK_TIMEOUT=30000  # 30 seconds
WEBHOOK_MAX_RETRIES=3

# Development Tools
DEBUG=tekbot:*
ENABLE_PLAYGROUND=true
ENABLE_INTROSPECTION=true

# Production Security (Only for production)
# HELMET_CSP_DIRECTIVES=default-src 'self'
# HELMET_HSTS_MAX_AGE=31536000
# HELMET_HSTS_INCLUDE_SUBDOMAINS=true
# HELMET_HSTS_PRELOAD=true

# Cloud Storage (Optional)
# AWS_ACCESS_KEY_ID=your-aws-access-key
# AWS_SECRET_ACCESS_KEY=your-aws-secret-key
# AWS_REGION=us-east-1
# AWS_S3_BUCKET=tekbot-uploads

# Azure Storage (Optional)
# AZURE_STORAGE_ACCOUNT=your-azure-storage-account
# AZURE_STORAGE_KEY=your-azure-storage-key
# AZURE_STORAGE_CONTAINER=tekbot-uploads

# Google Cloud Storage (Optional)
# GOOGLE_CLOUD_PROJECT_ID=your-gcp-project-id
# GOOGLE_CLOUD_KEY_FILE=path/to/service-account-key.json
# GOOGLE_CLOUD_STORAGE_BUCKET=tekbot-uploads