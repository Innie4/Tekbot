{
  "name": "tekbot-platform",
  "version": "1.0.0",
  "description": "Multi-tenant AI assistant engine for SMBs",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\" \"npm run dev:admin\" \"npm run dev:widget\"",
    "dev:backend": "npm run dev --workspace=apps/backend",
    "dev:frontend": "npm run dev --workspace=apps/frontend",
    "dev:admin": "npm run dev --workspace=apps/admin-dashboard",
    "dev:widget": "npm run dev --workspace=apps/widget",
    "dev:bot": "npm run dev:bot --workspace=apps/frontend",
    "build": "npm run build --workspaces",
    "build:backend": "npm run build --workspace=apps/backend",
    "build:frontend": "npm run build --workspace=apps/frontend",
    "build:admin": "npm run build --workspace=apps/admin-dashboard",
    "build:widget": "npm run build --workspace=apps/widget",
    "test": "npm run test --workspaces",
    "test:watch": "npm run test:watch --workspaces",
    "test:e2e": "npm run test:e2e --workspace=apps/backend",
    "lint": "eslint . --ext .ts,.tsx,.js,.jsx",
    "lint:fix": "eslint . --ext .ts,.tsx,.js,.jsx --fix",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "db:migrate": "npm run db:migrate --workspace=packages/database",
    "db:seed": "npm run db:seed --workspace=packages/database",
    "db:studio": "npm run db:studio --workspace=packages/database",
    "db:reset": "npm run db:reset --workspace=packages/database",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "prepare": "husky install || true",
    "start": "npm run start --workspace=apps/frontend"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "concurrently": "^8.2.2",
    "eslint": "^8.54.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-prettier": "^5.0.1",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "prettier": "^3.1.0",
    "typescript": "^5.3.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/tekskillz/tekbot-platform.git"
  },
  "keywords": [
    "ai",
    "chatbot",
    "multi-tenant",
    "saas",
    "customer-service",
    "automation"
  ],
  "author": "Tekskillz Team",
  "license": "MIT",
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "@nestjs/common": "^10.4.20",
    "@nestjs/typeorm": "^11.0.0",
    "recharts": "^3.2.1",
    "rxjs": "^7.8.2",
    "typeorm": "^0.3.27"
  }
}
